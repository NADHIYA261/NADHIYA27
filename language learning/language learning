    <div class="container">
        <div class="header">
            <h1>üåç Language Learning App</h1>
            <p>Master new languages with interactive lessons</p>
        </div>

        <div class="nav-tabs">
            <button class="tab-btn active" onclick="showTab('lessons')">üìö Lessons</button>
            <button class="tab-btn" onclick="showTab('flashcards')">üéØ Flashcards</button>
            <button class="tab-btn" onclick="showTab('quiz')">üß† Quiz</button>
            <button class="tab-btn" onclick="showTab('progress')">üìä Progress</button>
        </div>

        <!-- Lessons Tab -->
        <div id="lessons" class="tab-content active">
            <div class="language-selector">
                <button class="lang-btn active" onclick="selectLanguage('spanish')">üá™üá∏ Spanish</button>
                <button class="lang-btn" onclick="selectLanguage('french')">üá´üá∑ French</button>
                <button class="lang-btn" onclick="selectLanguage('german')">üá©üá™ German</button>
            </div>

            <div class="lesson-card">
                <h3 class="lesson-title">Daily Lesson: Basic Greetings</h3>
                <div id="lessonContent">
                    <!-- Lesson content will be loaded here -->
                </div>
            </div>

            <div class="controls">
                <button class="btn btn-primary" onclick="nextLesson()">Next Lesson</button>
                <button class="btn btn-success" onclick="practiceLesson()">Practice</button>
            </div>
        </div>

        <!-- Flashcards Tab -->
        <div id="flashcards" class="tab-content">
            <div class="progress-bar">
                <div class="progress-fill" id="flashcardProgress"></div>
            </div>
            
            <div class="flashcard-container">
                <div class="flashcard" id="flashcard" onclick="flipCard()">
                    <div class="card-face card-front">
                        <div id="flashcardFront">Click to start flashcards</div>
                    </div>
                    <div class="card-face card-back">
                        <div id="flashcardBack">Answer will appear here</div>
                    </div>
                </div>
            </div>

            <div class="controls">
                <button class="btn btn-primary" onclick="prevCard()">‚Üê Previous</button>
                <button class="btn btn-success" onclick="nextCard()">Next ‚Üí</button>
            </div>
        </div>

        <!-- Quiz Tab -->
        <div id="quiz" class="tab-content">
            <div class="quiz-container">
                <div class="progress-bar">
                    <div class="progress-fill" id="quizProgress"></div>
                </div>
                
                <div class="question" id="quizQuestion">
                    Ready to test your knowledge?
                </div>
                
                <div class="options" id="quizOptions">
                    <!-- Quiz options will be loaded here -->
                </div>
                
                <div class="controls">
                    <button class="btn btn-primary" onclick="startQuiz()">Start Quiz</button>
                    <button class="btn btn-success" onclick="nextQuestion()" style="display: none;" id="nextBtn">Next Question</button>
                </div>
            </div>
        </div>

        <!-- Progress Tab -->
        <div id="progress" class="tab-content">
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-number" id="lessonsCompleted">12</div>
                    <div class="stat-label">Lessons Completed</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number" id="wordsLearned">156</div>
                    <div class="stat-label">Words Learned</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number" id="streakDays">7</div>
                    <div class="stat-label">Day Streak</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number" id="quizScore">85%</div>
                    <div class="stat-label">Quiz Average</div>
                </div>
            </div>
            
            <div class="lesson-card">
                <h3 class="lesson-title">Recent Achievements</h3>
                <div class="phrase-item">
                    <span>üèÜ Completed "Basic Greetings" lesson</span>
                    <span style="color: #28a745;">Today</span>
                </div>
                <div class="phrase-item">
                    <span>üéØ Scored 90% on Spanish Quiz</span>
                    <span style="color: #28a745;">Yesterday</span>
                </div>
                <div class="phrase-item">
                    <span>üìö Learned 15 new words</span>
                    <span style="color: #28a745;">This week</span>
                </div>
            </div>
