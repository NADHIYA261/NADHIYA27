    <script>
        // Update progress rings
        function updateProgressRing(selector, percentage) {
            const circle = document.querySelector(selector);
            const radius = 52;
            const circumference = 2 * Math.PI * radius;
            const offset = circumference - (percentage / 100) * circumference;
            circle.style.strokeDashoffset = offset;
        }

        // Quick action functions
        function startWorkout() {
            alert('üèÉ‚Äç‚ôÇÔ∏è Starting workout tracker...');
        }

        function logActivity() {
            alert('üìù Opening activity log...');
        }

        function viewProgress() {
            alert('üìä Loading detailed progress...');
        }

        function setGoals() {
            alert('üéØ Opening goal settings...');
        }

        // Simulate real-time updates
        function updateStats() {
            const stats = document.querySelectorAll('.stat-number');
            stats.forEach(stat => {
                const current = parseInt(stat.textContent.replace(',', ''));
                const increment = Math.floor(Math.random() * 10) + 1;
                stat.textContent = (current + increment).toLocaleString();
            });
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            // Update progress rings with animation
            setTimeout(() => {
                updateProgressRing('.progress', 70);
            }, 500);
            
            // Simulate periodic updates
            setInterval(updateStats, 30000); // Update every 30 seconds
        });
    </script>
